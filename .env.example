# .env.example

# Flask
FLASK_APP=run:app
# Use production in deployed environments
FLASK_ENV=production
SECRET_KEY=please-change-this-to-a-strong-random-string

# Database
# For local dev you can use SQLite; in production use Postgres
DATABASE_URL=postgresql://user:password@host:5432/studio_manager

# Redis (optional but recommended for sessions, rate limiting, background tasks)
REDIS_URL=redis://redis:6379/0

# CORS - comma separated list of allowed origins (no wildcard when using cookies)
CORS_ORIGINS=https://your-frontend-domain.com,https://*.pages.dev

# Session cookies
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
# Set to None for cross-site (frontend on different domain). Options: Lax, Strict, None
SESSION_COOKIE_SAMESITE=None
PERMANENT_SESSION_LIFETIME=3600

# Gunicorn
GUNICORN_WORKERS=3
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=90

# Frontend build
VITE_API_URL=https://api.your-domain.com
